    "@nestjs/platform-socket.io": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/websockets": "^11.1.9",
    "@prisma/client": "^6.19.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "date-fns": "^4.1.0",
    "fastify": "^5.6.2",
    "js-yaml": "^4.1.1",
    "prisma": "^6.19.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^11.1.3",
